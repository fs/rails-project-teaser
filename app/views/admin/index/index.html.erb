<% @page_title = 'Welcome!' %>

<% unless @pages.blank? %>
    <h2> You may edit this static pages for site: </h2>
    <ul>
        <% @pages.each do |page| %>
            <li>
            <%= link_to page.name, edit_admin_page_path(page) %>
                <small> ( <%= link_to 'preview', pages_url(page.url) %> </small>)
            </li>
        <% end %>
    </ul>
<% end %>

<% unless @areas.blank? %>
    <h2> You may change this editable areas: </h2>
    <ul>
        <% @areas.each do |area| %>
            <li>
            <%= link_to area.name, edit_admin_editable_area_path(area), :title => area.description  %>
            </li>
        <% end %>
    </ul>
<% end %>
