<%= f.error_messages %>

<%# tabs(:editable_areas) do |tab| %>        
    <%# tab.primary do %>

        <div>
           <label for="editable_area_name">System name <span class="required">*</span>:</label>
            <br /><%= f.text_field :name, :disabled => true %>
            <div class="field-tip">this alias is used in code and remains the same</div>
        </div>

        <div>
           <label for="editable_area_description">Description:</label>
            <br /><%= f.text_area :description, {:style => 'height:3em;'} %>
            <div class="field-tip">general description for what the editable area is for</div>
        </div>
        
        <div>
           <label for="editable_area_html">HTML <span class="required">*</span>:</label>
           <br /><%= f.text_area :html, {:style => 'height:60em;'} %>
            <div class="field-tip">Please try to be careful while editing HTML that will be displayed on the web-site</div>
        </div>
       

        <div class="required-area">
            <span class="required">*</span> - required fields
        </div>
    <%# end %>
<%# end %>
