<%= f.error_messages %>

<% tabs(:pages) do |tab| %>        

    <% tab.primary "Primary" do %>

        <div>
            <label for="page_name">Page name<span class="required">*</span>:</label>

            <br /><%= f.text_field :name %>
            <div class="field-tip">This will be inserted in the beginning of the page in 'h1' tag.</div>
        </div>

        <div>
            <label for="page_url">Desired URL of the page<span class="required">*</span>:</label><br />
            <%= f.text_field :url %>
            <div class="field-tip">
                For example: my-page (all spaces and special characters are substituted with dashes).
            </div>
        </div>

        <div>
            <label for="page_text">Content<span class="required">*</span>:</label>
            <br /><%= f.text_area :text %>
        </div>

        <div class="required-area">
            <span class="required">*</span> - required fields
        </div>
    <% end %>

    <% tab.secondary "SEO optimization" do %>
        <div>
            <label for="page_title">Title of page:</label>
            <br /><%= f.text_field :title %>
            <%#            <div class="field-tip"></div> %>
        </div>

        <div>
            <label for="page_meta_keywords">Meta keywords:</label>
            <br /><%= f.text_area :meta_keywords %>
            <%#            <div class="field-tip"></div> %>
        </div>

        <div>
            <label for="page_meta_description">Meta description:</label>
            <br /><%= f.text_area :meta_description %>
            <%#            <div class="field-tip"></div> %>
        </div>
    <% end %>
<% end %>
